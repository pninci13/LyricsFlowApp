<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RelativeLayout to align goBackBtn and tvTitle -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/goBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_go_back"
            android:background="@android:color/transparent"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Topic Based Recommendations"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/etQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter topic"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:background="@drawable/input_bg"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:minHeight="40dp" />

    <!-- Space between Input Field and Buttons -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Button to Fetch Recommendations -->
        <Button
            android:id="@+id/btnFetchRecommendations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:minHeight="40dp"
            android:padding="12dp"
            android:text="Get Songs"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />

        <!-- Clear Button -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/border_with_no_bg"
            android:textColor="@color/component_color"
            android:padding="12dp"
            android:minHeight="40dp"
            app:backgroundTint="@null"/>
    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/white"/>

    <!-- RecyclerView to display song recommendations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

</LinearLayout>
