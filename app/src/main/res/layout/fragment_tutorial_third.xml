<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.tutorial.TutorialSecondFragment">

    <!-- Tutorial Image -->
    <ImageView
        android:id="@+id/tutorialImage"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/history_tutorial_with_border" />

    <!-- Tutorial Description Text -->
    <TextView
        android:id="@+id/tutorialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorialImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="History \n\n  The history is shown in cards so that\n you can remember the best result you\n got after entering some input."
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green_secondary_component"
        android:fontFamily="@font/montserrat_bold"
        android:padding="10dp"
        android:text="Next"
        android:textColor="@color/black" />

    <!-- Previous Button -->
    <Button
        android:id="@+id/previousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green_secondary_component"
        android:fontFamily="@font/montserrat_bold"
        android:padding="10dp"
        android:text="Previous"
        android:textColor="@color/black" />

</RelativeLayout>
